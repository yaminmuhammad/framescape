rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access files in their own folder
    match /users/{userId}/{allPaths=**} {
      // Allow read/write only to authenticated users for their own folder
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Public folder - accessible by anyone (for generated images)
    match /public/{allPaths=**} {
      allow read: if true;  // Anyone can read
      allow write: if false; // But only Cloud Functions can write
    }

    // Generated images folder - accessible by Cloud Functions and owner
    match /generated/{userId}/{allPaths=**} {
      // Allow public read access for testing
      allow read: if true;
      // Write is done by Cloud Functions (admin SDK), not client
    }
  }
}
