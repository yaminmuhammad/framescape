rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only access files in their own folder
    match /users/{userId}/{allPaths=**} {
      // Allow read/write only to authenticated users for their own folder
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Generated images folder - accessible by Cloud Functions and owner
    match /generated/{userId}/{allPaths=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
      // Write is done by Cloud Functions (admin SDK), not client
    }
  }
}
